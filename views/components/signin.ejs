<div class="form-container">
    <% if(locals.message.success) {%>
         <div class="alert-success"><%= message.success %></div>
        <%}%>
       
        <% if(errors.length > 0) { %>
            <div class="errors">
                <% errors.forEach(error => { %>
                   <span class="error">
                       <%= error.msg%>
                   </span>
                   <% })%>
            </div>
           <% } %>
    <form class="accountForms" action="/postLogin" method="POST"> 
        <div class="group">
            <h3>Login Account</h3>
        </div>
       
        <div class="group">
            <label for="name">Email</label>
            <input type="email" name="email" class="control" id="email"
             placeholder="email" value=<% if(inputs){%>  <%= inputs.email%>   <% } %> > 
            
        </div>
        <div class="group">
            <label for="name">Password</label>
            <input type="password" name="password" class="control"  id="password" 
            placeholder="enter your password here" value=<% if(inputs){%>  <%= inputs.password%>   <% } %> >
        </div>
        <div class="group">
           
            <input type="submit" class="btn btn-sweet" value="login">
        </div>


    </form>
</div>